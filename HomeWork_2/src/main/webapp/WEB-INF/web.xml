<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
         https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         metadata-complete="false">
    <display-name>M-JD2-XXX-XX</display-name>
    <welcome-file-list>
        <welcome-file>signIn.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>addUser</servlet-name>
        <jsp-file>/signUp.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet-mapping>
        <servlet-name>addUser</servlet-name>
        <url-pattern>/addUser</url-pattern> <!-- Any URL you want here -->
    </servlet-mapping>

    <servlet>
        <servlet-name>addNames</servlet-name>
        <jsp-file>/names.jsp</jsp-file> <!-- Your JSP. Must begin with '/' -->
    </servlet>
    <servlet-mapping>
        <servlet-name>addNames</servlet-name>
        <url-pattern>/addNames</url-pattern> <!-- Any URL you want here -->
    </servlet-mapping>


